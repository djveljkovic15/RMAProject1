<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".djordje_veljkovic_rn4615.view.fragments.StanjeFragment"
    >

    <TextView
        android:id="@+id/fragmentStanjeNaslovTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Pregled brojnog stanja pacijenata"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragmentStanjeCekaonicaTv"
        android:text="Broj pacijenata u cekaonici: "
        android:layout_marginStart="35dp"
        android:layout_marginTop="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragmentStanjeNaslovTv"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragmentStanjeCekaonicaBrTv"
        android:text=""
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/fragmentStanjeCekaonicaTv"
        android:layout_marginTop="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragmentStanjeNaslovTv"
        android:textColor="@color/colorAccent"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragmentStanjeHospitalTv"
        android:text="Broj hospitalizovanih pacijenata: "
        android:layout_marginStart="35dp"
        android:layout_marginTop="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragmentStanjeCekaonicaTv"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragmentStanjeHospitalBrTv"
        android:text=""
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/fragmentStanjeCekaonicaTv"
        android:layout_marginTop="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragmentStanjeCekaonicaTv"
        android:textColor="@color/colorPrimary"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragmentStanjeOtpustenihTv"
        android:text="Broj otpustenih pacijenata: "
        android:layout_marginStart="35dp"
        android:layout_marginTop="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragmentStanjeHospitalTv"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragmentStanjeOtpustenihBrTv"
        android:text=""
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/fragmentStanjeOtpustenihTv"
        android:layout_marginTop="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragmentStanjeHospitalTv"
        android:textColor="@color/colorPrimaryDark"
        />


</androidx.constraintlayout.widget.ConstraintLayout>